{
  "name": "@schummar/runp",
  "version": "1.0.6",
  "description": "Run multiple tasks in parallel while keeping their output nicely separated",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "types": "dist/index.d.ts",
  "repository": "schummar/runp",
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "scripts": {
    "lint": "eslint src",
    "build": "npm-run-all build:clean -p build:compile:*",
    "build:clean": "rimraf \"dist/**/*\"",
    "build:compile:main": "esbuild --bundle --platform=node src/index.ts --outfile=dist/index.js --external:tasuku",
    "build:compile:types": "tsc --emitDeclarationOnly",
    "build:compile:cli": "esbuild --platform=node --format=cjs src/cli.ts --outfile=dist/cli.js",
    "prepublishOnly": "run-s lint build"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "esbuild": "^0.14.54",
    "eslint": "^8.21.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "tsx": "^3.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cleye": "^1.2.1",
    "multimatch": "^6.0.0",
    "quoted-string-space-split": "^1.1.1",
    "tasuku": "^2.0.0"
  },
  "files": [
    "dist",
    "cli.js"
  ]
}
